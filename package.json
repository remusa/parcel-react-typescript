{
    "name": "parcel-react",
    "version": "1.0.1",
    "description": "React + Parcel boilerplate",
    "main": "index.js",
    "scripts": {
        "start": "parcel public/index.html --open",
        "build": "cross-env NODE_ENV=production rimraf ./dist && yarn run lint:fix && parcel build public/index.html",
        "dev": "cross-env NODE_ENV=development yarn run start",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "cross-env NODE_ENV=test jest --watch --silent",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage --silent",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,json,html}\"",
        "lint:quiet": "eslint \"src/**/*.{js,jsx,ts,tsx,json,html}\" --quiet",
        "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx,json,html}\" --fix && echo 'Lint complete.'",
        "prettify": "pretty-quick && echo 'Format complete.'",
        "deploy": "yarn run build && yarn run netlify:deploy",
        "netlify:deploy": "netlify deploy --dir=./build -p -m \"$(git log -1 --pretty=%B)\""
    },
    "dependencies": {
        "@emotion/core": "^10.0.22",
        "@emotion/styled": "^10.0.23",
        "react": "^16.8.6",
        "react-bulma-components": "^3.1.3",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@testing-library/react": "^8.0.1",
        "autoprefixer": "^9.6.0",
        "babel-eslint": "^9.0.0",
        "babel-jest": "^24.8.0",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "cross-env": "^6.0.3",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-config-wesbos": "0.0.19",
        "eslint-plugin-html": "^5.0.5",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "eslint-plugin-react-hooks": "^1.6.1",
        "jest": "^24.8.0",
        "netlify-cli": "^2.11.22",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "prop-types": "^15.7.2",
        "react-test-renderer": "^16.8.6",
        "sass": "^1.21.0"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/react/cleanup-after-each"
        ]
    },
    "eslintConfig": {
        "extends": [
            "wesbos"
        ],
        "settings": {
            "import/resolver": {
                "node": {
                    "extensions": [
                        ".js",
                        ".jsx",
                        ".ts",
                        ".tsx"
                    ]
                }
            }
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "trailingComma": "es5",
                    "singleQuote": true,
                    "printWidth": 80,
                    "tabWidth": 4,
                    "semi": false,
                    "jsxSingleQuote": true,
                    "useTabs": false,
                    "jsxBracketSameLine": false,
                    "endOfLine": "auto"
                }
            ],
            "react/jsx-filename-extension": [
                {
                    "extensions": [
                        ".ts",
                        ".tsx"
                    ]
                }
            ]
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [],
        "env": {
            "production": {
                "plugins": [
                    "transform-remove-console"
                ]
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn run lint:fix",
            "...": "..."
        }
    },
    "postcss": {
        "modules": false,
        "plugins": {
            "autoprefixer": {
                "overrideBrowserslist": [
                    ">1%",
                    "last 4 versions",
                    "Firefox ESR",
                    "not ie < 9"
                ],
                "flexbox": "no-2009",
                "grid": true
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/remusa/parcel-react.git"
    },
    "keywords": [
        "parcel",
        "react",
        "typescript",
        "boilerplate"
    ],
    "author": "RMS",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/remusa/parcel-react-typescript/issues"
    },
    "homepage": "https://github.com/remusa/parcel-react-typescript#readme",
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
